{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "~~/*": [
        "*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/@types/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./next-env.d.ts",
    "./next-seo.config.ts",
    "./next-sitemap.config.mjs",
    "./next.config.mjs"
  ],
  "exclude": [
    "./node_modules/"
  ]
}
