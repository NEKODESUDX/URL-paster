{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "ESNext",
    "noEmit": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "Node",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~next-seo.config": [
        "next-seo.config.ts"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "./node_modules/"
  ],
  "include": [
    "./@types/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./next-env.d.ts",
    "./next-seo.config.ts",
    "./next-sitemap.config.mjs",
    "./next.config.mjs"
  ]
}
