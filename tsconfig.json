{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./src/@types/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./next-env.d.ts",
    "./next-seo.config.ts",
    "./next-sitemap.config.mjs",
    "./next.config.mjs"
  ],
  "exclude": [
    "./node_modules/"
  ]
}
